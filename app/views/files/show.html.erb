<h1>
  <%= @resource.filename.filename %>
</h1>
<div class="row">
  <div class="col-8">
    <div class="card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= @resource.filename.filename %>
          <span class="badge badge-primary badge-pill"><%= format_file_size(@resource.filename.byte_size) %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <b>Name:</b> <%= @resource.name %>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <b>Tags:</b> <%= @resource.tags %>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-4">
    <%= render_resource(@resource) %>
  </div>
</div>
