<h1>Upload a new file</h1>

<hr>

<%= form_for(Resource.new, url: {action: "create"}, html: { class: "form" }) do |form| %>
  <div class="form-group">
    <%= form.text_field :name, :class => 'form-control', :placeholder => 'Enter a name or description' %>
  </div>
  <div class="form-group">
    <%= form.text_field :tag_list, :class => 'form-control', :placeholder => 'Enter a tag or list of tags' %>
  </div>
  <div class="form-group custom-file">
    <%= form.file_field :filename, multiple: false, direct_upload: true, :class => 'custom-file-input' %>
    <label class="custom-file-label" for="resource_filename">Choose file</label>
  </div>
  <div class="form-group">
    <hr>
    <%= form.submit "Create", :class => 'btn btn-secondary' %>
  </div>
<% end %>
